
<div class="bg-body-tertiary p-5 rounded mt-3">  
    <h1>Editar</h1>
{{#unless error}}
    <form action="/update" method="post">
        <div class="row mt-4" >
            <div class="col-md-5 mb-3">
                <label for="nome">Nome Completo</label>

                <input value="{{nome}}" type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome" required>

                <input type="hidden" name="id" value="{{id}}">
                
            </div>
            <div class="col-md-5">
                <label for="email">E-mail</label>

                <input value="{{email}}" type="email" class="form-control" id="email" name="email" placeholder="Digite seu e-mail" required>
                
            </div>
            <div class="col-md-2">
                <button class="mt-4 p-2 w-100 btn btn-warning">Salvar Alterações</button>
            </div>
        </div>
    </form>
    
</div>
{{else}}
<div class="card bg-danger text-white">
    Houve um problema: {{problema}}
</div>
{{/unless}}